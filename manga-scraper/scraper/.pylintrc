[MASTER]
# Python code to execute, usually for sys.path manipulation
init-hook='import sys; sys.path.append("src")'

# Files or directories to be skipped
ignore=CVS,.git,__pycache__,venv,.venv,build,dist

# Pickle collected data for later comparisons
persistent=yes

[MESSAGES CONTROL]
# Disable specific warnings
disable=
    missing-docstring,
    invalid-name,
    too-many-arguments,
    too-many-locals,
    too-many-branches,
    too-many-statements,
    too-few-public-methods,
    protected-access,
    duplicate-code,
    fixme,
    broad-except

[REPORTS]
# Output format
output-format=colorized

# Reports format
reports=no

# Score
score=yes

[FORMAT]
# Maximum line length
max-line-length=100

# Maximum lines in a module
max-module-lines=1000

# String used for indentation
indent-string='    '

[BASIC]
# Naming conventions
good-names=i,j,k,e,ex,_,id,db,s3

# Regular expressions for naming
module-rgx=(([a-z_][a-z0-9_]*)|([A-Z][a-zA-Z0-9]+))$
const-rgx=(([A-Z_][A-Z0-9_]*)|(__.*__))$
class-rgx=[A-Z_][a-zA-Z0-9]+$
function-rgx=[a-z_][a-z0-9_]{2,30}$
method-rgx=[a-z_][a-z0-9_]{2,30}$
attr-rgx=[a-z_][a-z0-9_]{2,30}$
argument-rgx=[a-z_][a-z0-9_]{2,30}$
variable-rgx=[a-z_][a-z0-9_]{2,30}$

[DESIGN]
# Maximum number of arguments
max-args=8

# Maximum number of attributes
max-attributes=12

# Maximum number of boolean expressions
max-bool-expr=5

# Maximum number of branches
max-branches=12

# Maximum number of locals
max-locals=15

# Maximum number of return/yield
max-returns=6

# Maximum number of statements
max-statements=50

[IMPORTS]
# Allow wildcard imports
allow-wildcard-with-all=yes

[EXCEPTIONS]
# Exceptions that will emit a warning when caught
overgeneral-exceptions=Exception
