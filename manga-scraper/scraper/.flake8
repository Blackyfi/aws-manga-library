[flake8]
# Maximum line length
max-line-length = 100

# Maximum complexity
max-complexity = 10

# Exclude patterns
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    .mypy_cache,
    .tox

# Ignore specific errors
ignore =
    # E203: whitespace before ':'
    E203,
    # W503: line break before binary operator
    W503,
    # E501: line too long (handled by black)
    E501,
    # F401: module imported but unused
    F401,

# Per-file ignores
per-file-ignores =
    __init__.py:F401,
    tests/*:F401,F811

# Show source code for errors
show-source = True

# Show pep8 violation statistics
statistics = True

# Count errors
count = True
